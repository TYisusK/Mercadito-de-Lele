<link rel="stylesheet" href="/Web/css/editarProd.css">
<%- include("../templates/encabezado") %>
<%- include("../templates/menu") %>
<div class="container mt-5">
    <form action="/editarProducto" method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="card-header">
                <h1>Editar Producto</h1>
            </div>
            <div class="card-body">
                <input type="hidden" name="id" id="id" value="<%= producto.id %>">
                <input class="form-control mb-3" type="text" value="<%= producto.nombre %>" name="nombre" id="nombre" placeholder="Nombre" autofocus>
                <input class="form-control mb-3" type="text" value="<%= producto.precio %>" name="precio" id="precio" placeholder="Precio">
                <input class="form-control mb-3" type="file"  name="foto" id="foto" placeholder="Foto">
            </div>
            <div class="card-footer">
                <button class="btn btn-primary mb-3" type="submit">Editar Producto</button>
                <button class="btn btn-secondary mb-3" type="reset">Limpiar campos</button>
            </div>
        </div>
    </form>
</div>
<%- include("../templates/pie") %>
