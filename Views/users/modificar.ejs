<link rel="stylesheet" href="/Web/css/nuevoprod.css">
<div class="container mt-5">
    <form action="/editarUsuario" method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="card-header">
                <h1>Editar Usuario</h1>
            </div>
            <div class="card-body">
                <input type="hidden" name="id" id="id" value="<%= usuario.id %>">
                <input type="hidden" name="fotoAnterior" id="fotoAnterior" value="<%= usuario.foto %>">
                <input class="form-control mb-3" type="text" value="<%= usuario.nombre %>" name="nombre" id="nombre" placeholder="Nombre" autofocus>
                <input class="form-control mb-3" type="text" value="<%= usuario.usuario %>" name="usuario" id="usuario" placeholder="Usuario">
                <input class="form-control mb-3" type="text"  name="password" id="password" placeholder="nuevo passworrd o dejarlo e blanco para mantener el anterior">
                <input class="form-control mb-3" type="text" value="<%= usuario.edad %>" name="edad" id="edad" placeholder="edad">
                <input class="form-control mb-3" type="text" value="<%= usuario.correo %>" name="correo" id="correo" placeholder="correo">
                <input class="form-control mb-3" type="text" value="<%= usuario.tipo %>" name="tipo" id="tipo" placeholder="tipo">
                <input class="form-control mb-3" type="text" value="<%= usuario.telefono %>" name="telefono" id="telefono" placeholder="telefono">

                <input class="form-control mb-3" type="file"  name="foto" id="foto" placeholder="Foto"> 

                
            </div>
            <div class="card-footer">
                <button class="btn btn-primary mb-3" type="submit">Editar Usuario</button>
                <button class="btn btn-secondary mb-3" type="reset">Limpiar campos</button>
            </div>
        </div>
    </form>
</div>
